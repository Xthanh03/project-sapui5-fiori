<mvc:View
    controllerName="assignment1.controller.View"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page"
        title="{i18n>title}"
        showNavButton="true"
    >
        <customHeader>
            <!-- Header Bar -->
            <Bar>
                <contentLeft>
                    <Image
                        src="https://sapui5.hana.ondemand.com/resources/sap/ui/documentation/sdk/images/logo_sap.png"
                        width="50px"
                    />
                    <Text text="{i18n>title}" />
                </contentLeft>
            </Bar>
        </customHeader>
        <content>
            <!-- Table -->
            <mvc:XMLView viewName="assignment1.view.SmartTable" />
        </content>
    </Page>
</mvc:View>
